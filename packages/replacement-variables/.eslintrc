{
    "extends": [ "yoast" ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "plugins": [ "@babel" ],
    "env": {
        "jest": true
    },
    "rules": {
        "require-jsdoc": "off",
        "valid-jsdoc": "off",
        // We use 'wp.element.createElement' instead of the 'react' package directly.
        "react/react-in-jsx-scope": "off"
    }
}
