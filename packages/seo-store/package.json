{
  "name": "@yoast/seo-store",
  "version": "1.0.0",
  "jest": {
    "testRegex": "src\\/.+\\/(?:.*[-.])?tests?\\.js$",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "timers": "fake"
  },
  "main": "build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoast/wordpress-seo",
    "directory": "packages/seo-store"
  },
  "author": "Team Yoast",
  "license": "GPL-3.0",
  "scripts": {
    "build": "yarn clean && babel src --out-dir build --source-maps",
    "build:prod": "yarn clean && babel src --out-dir build",
    "watch": "yarn clean && babel src --watch --out-dir build --source-maps",
    "clean": "rimraf build",
    "lint": "eslint src --max-warnings=0",
    "lint:watch": "esw src --max-warnings=0 --watch",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/eslint-plugin": "^7.14.5",
    "@testing-library/react-hooks": "^7.0.2",
    "@wordpress/babel-preset-default": "^6.3.4",
    "babel-jest": "^27.3.1",
    "eslint": "^8.1.0",
    "eslint-config-yoast": "^5.0.17",
    "eslint-watch": "^8.0.0",
    "jest": "^27.3.1",
    "rimraf": "^3.0.2"
  },
  "peerDependencies": {
    "@wordpress/data": "^6.1.2",
    "@wordpress/element": "^4.0.3",
    "@wordpress/hooks": "^3.2.1",
    "react": "^17.0.1"
  }
}
