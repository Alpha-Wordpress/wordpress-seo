podTemplate(
	containers: [
		containerTemplate(
			name: 'node',
			image: 'node:12',
			ttyEnabled: true,
			envVars: []
		)
	],
	volumes: [
   		emptyDirVolume(mountPath: '/var/www/html', memory: false),
	]
) {
	node(POD_LABEL) {
		stage('Run shell') {
			container('node') {
				checkout scm
				sh 'cd packages/yoastseo'
				sh 'yarn'
				sh 'yarn lint'
				sh 'yarn test'
			}
		}
	}
}
