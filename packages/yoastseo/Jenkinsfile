podTemplate(
	containers: [
		containerTemplate(
			name: 'node',
			image: 'node:12',
			ttyEnabled: true,
			envVars: [
			    envVar(key: 'CI', value: 'true')
			]
		)
	],
	volumes: [
   		emptyDirVolume(mountPath: '/var/www/html', memory: false),
	]
) {
	node(POD_LABEL) {
		stage('Run shell') {
			container('node') {
				checkout scm
				dir( 'packages/yoastseo' ) {
				    sh 'yarn'
				    sh 'yarn lint'
				    sh 'yarn test'
				}
			}
		}
	}
}
